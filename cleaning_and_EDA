library(lubridate)
library(dplyr)
data <- films_van_golem


#### Count the nº of sessions each films has per day ####

## Full tidyverse
# In this example across works well too

data <- data %>% 
  rowwise() %>% 
  mutate(
    Sessions = sum(!is.na(c_across(2:5)))
  )

## Apply + dplyr ##
# Count the nº of sessions each films has per day

count_na_function <- function(x) sum(!is.na(x))
data %>% 
  select(2:5) %>% 
  mutate(
    Sessions = apply(., 1, count_na_function)
  ) %>% 
  mutate(films = data$films) %>% 
  relocate(films, .before = time1)
